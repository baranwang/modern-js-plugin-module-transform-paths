{
  "extends": "@modern-js/tsconfig/base",
  "declaration": true,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "isolatedModules": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules"
  ]
}